def find_smallest_number(lst):
    # initialize the smallest number to the first element of the list
    smallest = lst[0]

    # iterate over the list
    for num in lst:
        # update the smallest number if we find a smaller number
        if num < smallest:
            smallest = num

    return smallest

# test the function with sample input
list1 = [5, 7, 9, 14, 10, 20, 4]
smallest_num = find_smallest_number(list1)
print("The smallest number in the list is:", smallest_num)
