def factorial(num):
    # initialize the factorial to 1
    fact = 1

    # if the input number is 0 or 1, the factorial is 1
    if num == 0 or num == 1:
        return fact

    # for other numbers, calculate the factorial using a loop
    else:
        for i in range(1, num+1):
            fact *= i

        return fact

# test the function with sample input
num = 5
factorial_num = factorial(num)
print("Factorial of", num, "is:", factorial_num)
